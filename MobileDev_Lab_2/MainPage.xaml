<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDev_Lab_2.MainPage">

    <StackLayout>
        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
            <Label SemanticProperties.HeadingLevel="Level3" Text="G = (tg(x^4 - 6) -cos(z + xy)^3) / cos(c^2 * x^3)^4" />
            <VerticalStackLayout Spacing="10">
                
                <Label SemanticProperties.HeadingLevel="Level4" Text="Enter x value of X param" />
                <Entry x:Name="inputEntry" />
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="50">
                    
                    <Button Text="Calculate" Clicked="Button_Clicked" />
                    <Button Text="About me" Clicked="OnClickAbout" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Function result" x:Name="resultLabel" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>
